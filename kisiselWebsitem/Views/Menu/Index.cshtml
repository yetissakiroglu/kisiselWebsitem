@model IEnumerable<kisiselWebsitem.Models.Model.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Menü</h2>

<p>
    <a href="/Menu/Create/" class="btn btn-primary">Yeni Menü Ekle</a>
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MenuAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Siralama)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MenuAdi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Url)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Siralama)
    </td>
    <td>
        @Html.ActionLink("Güncelle", "Edit", new { id = item.MenuId }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Detay", "Details", new { id = item.MenuId }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Sil", "Delete", new { id = item.MenuId }, new { @class = "btn btn-primary" })
    </td>
</tr>
    }

</table>
