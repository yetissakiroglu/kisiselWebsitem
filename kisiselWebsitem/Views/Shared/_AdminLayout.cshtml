@{
    if (Session["adminid"] == null)
    {
        Response.Redirect("/panel/giris/");
    }

    string ControllerAdi = ViewContext.RouteData.GetRequiredString("controller");
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kişisel Web Admin</title>


    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Kisisel Web Sitesi">
    <meta name="author" content="Akif Kaplan">
    <meta name="keyword" content="Akif Kaplan">
    <link rel="shortcut icon" href="/Content/img/favicon.png">
    <!-- Bootstrap CSS -->
    <link href="/Content/panel/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/panel/style.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <!--
    ======================================================= -->
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    @*<link href="~/Content/ckeditor/contents.css" rel="stylesheet" />*@



</head>
<body>

    <div class="wrapper">
        <!-- Sidebar Holder -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <img src="~/Content/img/logo.png" class="img-responsive" style="width:200px;" />
            </div>

            <ul class="list-unstyled components">
                <p>Yönetim Paneli</p>

                <li>
                    <a href="/Kimlik/Index">Ayarlar</a>
                </li>

                <li>
                    <a href="/Hakkimizda/Index"> Hakkımızda</a>
                </li>
                <li>
                    <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false">Blog Kayıtları</a>
                    <ul class="collapse list-unstyled" id="pageSubmenu">
                        <li><a href="/Kategori/Index/">Kategoriler</a></li>
                        <li><a href="/Blog/Index/">Blog Kayıtları</a></li>
                        <li><a href="/Yorum/Index/">Blog Yorumları</a></li>
                    </ul>
                </li>
                <li>
                    <a href="/Slider/Index">Slider</a>
                </li>
                <li>
                    <a href="/Iletisim/Index">İletişim</a>
                </li>
            </ul>

            <ul class="list-unstyled CTAs">
                @if (Session["yetki"].ToString() == "Admin")
                {
                    <li>
                        <a href="/Admin/Adminler/" class="download">Adminler</a>
                    </li>
                }
                <li>  <a href="/Admin/Logout/" class="article"> @Session["eposta"] - Çıkış</a></li>
            </ul>
        </nav>
        <!-- Page Content Holder -->

        <div id="content">
            <div class="container-fluid">
                <div class="row">

                    <div class="col-md-12">

                        @RenderBody()

                    </div>
                </div>
            </div>

        </div>

    </div>


    <!-- container section start -->
    <script src="~/Content/panel/jquery.js"></script>
    <script src="~/Content/panel/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/panel/js/bootstrap.min.js"></script>
    <!-- nice scroll -->

</body>


</html>
